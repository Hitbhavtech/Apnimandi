<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitites.FruitsActivity"
    android:id="@+id/FruitsActivityRootView"
    android:background="@color/gray_color">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/FruitsActivityToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/fruits"
        style="?actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        android:background="@color/colorPrimary">

    </androidx.appcompat.widget.Toolbar>


    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/FruitsActivitySearchCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="@dimen/_10sdp"
        app:ignore="NamespaceTypo"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/white"
        android:layout_below="@+id/FruitsActivityToolbar">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/FruitsActivitySearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/FruitsActivityToolbar"></androidx.appcompat.widget.SearchView>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fruitsRecyclerViewWidget"
        android:layout_below="@id/FruitsActivitySearchCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_5sdp"></androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/FruitsActivityNoItemAddedYetTextView"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/No_item_added_yet"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/black"></TextView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitites.VegetablesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/VegetablesActivityToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/vegetable"
        style="?actionBarSize"
        android:background="@color/colorPrimary"></androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/VegetablesActivityToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vegetableRecyclerView"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>
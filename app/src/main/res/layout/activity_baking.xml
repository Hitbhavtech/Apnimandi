<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BakingActivityRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/strong_gray_color"
    tools:context=".activitites.BakingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/BakingActivityToolbar"
        style="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        app:title="@string/backing"></androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/BakingActivitySearchCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BakingActivityToolbar"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="@dimen/_10sdp"
        app:ignore="NamespaceTypo"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/BakingActivitySearchView"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                card_view:defaultQueryHint="e.g. Apple"></androidx.appcompat.widget.SearchView>

            <TextView
                android:id="@+id/BakingActivityQueryHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_35sdp"
                android:text="@string/search_item_by_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"></TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/BakingActivityRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/BakingActivitySearchCardView"
        android:padding="@dimen/_5sdp"></androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/BakingActivityNoItemAddedYetTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/No_item_added_yet"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        android:visibility="gone"></TextView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/_1sdp"
    android:id="@+id/AddToCartActivityBottomRelativeLayout"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:text="GREAT!"></TextView>

        <RelativeLayout
            android:id="@+id/BottomSheetRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/BottomSheetRelativeLayoutImageView"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/white_shopping_cart"></ImageView>

                <TextView
                    android:id="@+id/BottomSheetRelativeLayoutThankYouTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/thank_you"
                    android:textSize="@dimen/_14sdp"
                    android:textAlignment="center"
                    android:padding="@dimen/_10sdp"
                    android:layout_below="@id/BottomSheetRelativeLayoutImageView"
                    android:textStyle="bold"
                    android:textColor="@color/white"></TextView>


                <TextView
                    android:id="@+id/BottomSheetRelativeLayoutMsgTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/your_order_placed"
                    android:textSize="@dimen/_12sdp"
                    android:textAlignment="center"
                    android:layout_below="@id/BottomSheetRelativeLayoutThankYouTextView"
                    android:textColor="@color/white"></TextView>

                <TextView
                    android:id="@+id/BottomSheetRelativeLayoutWillReachTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/will_reach"
                    android:textSize="@dimen/_12sdp"
                    android:textAlignment="center"
                    android:padding="@dimen/_5sdp"
                    android:layout_below="@id/BottomSheetRelativeLayoutMsgTextView"
                    android:textColor="@color/white"></TextView>

                <TextView
                    android:id="@+id/BottomSheetRelativeLayoutOrderIdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/your_order_number"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_below="@id/BottomSheetRelativeLayoutWillReachTextView"
                    android:textColor="@color/white"></TextView>

        </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ItemDescriptionActivityRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitites.ItemDescriptionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ItemDescriptionActivityToolbar"
        style="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp">

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ItemDescriptionActivityBottomRelativeLayout"
        android:layout_below="@id/ItemDescriptionActivityToolbar"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/ItemDescriptionActivityLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/strong_gray_color"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/ItemDescriptionActivityItemImageView"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_background"></ImageView>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/tools"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/SingleItemViewAddToCartRootView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="#e0e0e0"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="@dimen/_4sdp"
                app:ignore="NamespaceTypo"
                card_view:cardCornerRadius="5dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/ItemDescriptionActivityItemName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Mango"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"></TextView>

                        <TextView
                            android:id="@+id/ItemDescriptionActivityItemPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="₹100/kg"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"></TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Delivery Charge"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"></TextView>

                        <TextView
                            android:id="@+id/ItemDescriptionActivityDeliverCharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="₹20"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"></TextView>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="center"
                android:background="@color/gray_color"></View>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/tools"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="#e0e0e0"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="@dimen/_4sdp"
                app:ignore="NamespaceTypo"
                card_view:cardCornerRadius="5dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"></TextView>

                    <TextView
                        android:id="@+id/ItemDescriptionActivityDetailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A mango is a juicy stone fruit (drupe) produced from numerous species of tropical trees belonging to the flowering plant genus Mangifera, cultivated mostly for their edible fruit. Most of these species are found in nature as wild mangoes."
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_3sdp"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="center"
                android:background="@color/gray_color"></View>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/tools"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="#e0e0e0"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="@dimen/_4sdp"
                app:ignore="NamespaceTypo"
                card_view:cardCornerRadius="5dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nutrition Facts"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"></TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_5sdp">

                        <LinearLayout
                            android:id="@+id/ItemDescriptionActivityCalories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calories "
                                android:textColor="@color/black"></TextView>

                            <TextView
                                android:id="@+id/ItemDescriptionActivityCaloriesTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="60"
                                android:textColor="@color/black"></TextView>

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_35sdp"
                            android:layout_toRightOf="@id/ItemDescriptionActivityCalories"
                            android:background="@color/black"></View>

                        <LinearLayout
                            android:id="@+id/ItemDescriptionActivityFat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fat"
                                android:textColor="@color/black"></TextView>

                            <TextView
                                android:id="@+id/ItemDescriptionActivityFatTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.4g"
                                android:textColor="@color/black"></TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ItemDescriptionActivityProtein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Protein"
                                android:textColor="@color/black"></TextView>

                            <TextView
                                android:id="@+id/ItemDescriptionActivityProteinTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.8g"
                                android:textColor="@color/black"></TextView>

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_35sdp"
                            android:layout_toRightOf="@id/ItemDescriptionActivityFat"
                            android:background="@color/black"></View>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/ItemDescriptionActivityBottomRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_color"
        android:padding="@dimen/_10sdp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ItemDescriptionActivityBottomRelativeLayoutPlaceOrderButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:insetLeft="4dp"
            android:layout_alignParentRight="true"
            android:text="@string/add_to_cart">

        </com.google.android.material.button.MaterialButton>

    </RelativeLayout>

</RelativeLayout>